{% extends "Patient/base.html.twig" %}

{% block breadcrumb %}
    <li><a href="/admin/patient/">Pacientes</a></li>
    <li class="active">Nuevo</li>
{% endblock %}


{% block pageContent %}

    <div class="card full-width">
        <div class="card-body">
            <h4 class="card-title">Nuevo</h4>
            <form action="/admin/patient/new" method="post">
                <div class="form-group">
                    <div class="input-affix">
                        <i class="prefix material-icons">mail</i>
                        <input name="email" class="full-width" type="email" placeholder="Correo electrónico" value="" required />
                    </div>
                </div>
                <div class="row">
                    <div class="col xs-6 form-group">
                        <input name="firstName" class="full-width" type="text" placeholder="Nombre" value="" required/>
                    </div>
                    <div class="col xs-6 form-group">
                        <input name="lastName" class="full-width" type="text" placeholder="Apellido" value="" required/>
                    </div>
                </div>
                <label for="birthDate">Nacimiento:</label>
                <div class="form-group">
                    <input name="birthDate" class="full-width" type="date" value="" required/>
                </div>
                <div class="form-group">
                    <input name="phone" class="full-width" type="text" placeholder="Teléfono" value="" />
                </div>
                <div class="form-group">
                    <input name="address" class="full-width" type="text" placeholder="Direccion" value="" />
                </div>
                <label for="birthDate">Sexo:</label>
                <div class="form-group">
                    <select name="sex" class="full-width">
                        <option value="0">Femenino</option>
                        <option value="1">Masculino</option>
                    </select>
                </div>
                <div class="row">
                    <div class="col xs-6 form-group">
                    <input name="dni" class="full-width" type="text" placeholder="DNI" value="" />
                    </div>
                    <div class="col xs-6 form-group">
                    <select name="dniType" class="full-width">
                        {% for dniType in dniTypes %}
                            <option value="{{ dniType.id }}">{{ dniType }}</option>
                        {% endfor %}
                    </select>
                    </div>
                </div>
                <label for="birthDate">Obra Social:</label>
                <div class="form-group">
                    <select name="insurance" class="full-width">
                        <option value="-1" selected>Seleccione una obra social</option>
                        {% for insurance in insurances %}
                            <option value="{{ insurance.id }}">{{ insurance }}</option>
                        {% endfor %}
                    </select>
                </div>


                <button class="btn primary" type="submit">Crear Paciente</button>
            </form>
        </div>
    </div>
{% endblock %}

